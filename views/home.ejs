<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>MediTon</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/icon.png" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/style.css" rel="stylesheet" />
    <!-- fontawesome  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container px-lg-5">
            <a class="navbar-brand" href="#!"><b>MediTon</b></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="./emergencyPage">Emergency Page</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="py-5">
        <div class="container px-lg-5">
            <div class="p-4 p-lg-5 rounded-3 text-center" style="background-color: rgb(227, 227, 143);">
                <div class="m-3 m-lg-5">
                    <h1 class="display-5 fw-bold">"Your Personal Health Assistant Delivering Medication Reminders with
                        Compassion"</h1>
                    <p class="fs-4"><i>"Empowering Health, Enriching Lives: Your Personalized Wellness Companion"</i></p>
    
                    <!-- Button trigger modal -->
                    <a class="btn btn-primary btn-lg" href="#!" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Patient</a>
                </div>
            </div>
        </div>
    </header>
    

    <!-- Modal start -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Patient Details</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Add the action attribute to specify the endpoint to handle form submission -->
                    <form action="/createPatient" method="post" class="needs-validation">
                        <!-- Name Field -->
                        <div class="form-group mb-2">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter patient name"
                                name="name" required>

                        </div>

                        <!-- Age Field -->
                        <div class="form-group mb-2">
                            <label for="age" class="form-label">Age</label>
                            <input type="number" class="form-control" id="age" placeholder="Enter patient age"
                                name="age" required>
                        </div>

                        <!-- Gender Field -->
                        <div class="form-group d-flex justify-content-between m-2 needs-validation">
                            <label class="form-label">Gender</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="male" value="Male"
                                    required>
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="female" value="Female"
                                    required>
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="other" value="Other"
                                    required>
                                <label class="form-check-label" for="other">Other</label>
                            </div>
                        </div>

                        <!-- Phone Number Field -->
                        <div class="form-group mb-2">
                            <label for="phoneNumber" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="phoneNumber" placeholder="Enter phone number"
                                name="phoneNumber" required>
                        </div>

                        <!-- Medication Details Section -->
                        <h4 class="mt-4">Medication Details</h4>
                        <!-- Medication Name Field -->
                        <div class="form-group">
                            <label for="medicationName" class="form-label">Medication Name</label>
                            <input type="text" class="form-control" id="medicationName"
                                placeholder="Enter medication name" name="medications[0][name]" required>
                        </div>

                        <!-- Medication Dosage Field -->
                        <div class="form-group">
                            <label for="dosage" class="form-label">Dosage</label>
                            <input type="text" class="form-control" id="dosage" placeholder="Enter medication dosage"
                                name="medications[0][dosage]" required>
                        </div>

                        <!-- Medication Schedule Field -->
                        <div class="form-group">
                            <label for="schedule" class="form-label">Medication Schedule</label>
                            <input type="text" class="form-control" id="schedule"
                                placeholder="Enter medication schedule" name="medications[0][schedule]" required>
                        </div>
                        <!-- Reminder Date and Time Field -->
                        <div class="form-group">
                            <label for="reminderDateTime" class="form-label">Reminder Date and Time</label>
                            <input type="datetime-local" class="form-control" id="reminderDateTime"
                                name="reminderDateTime" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button class="btn btn-primary" type="submit">Add Patient</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <!-- Modal end  -->
    <!-- Page Content-->
    <section class="pt-4">
        <div class="container px-lg-5">
            <!-- Page Features-->
            <div class="row gx-lg-5">
                <% patients.forEach(patient=> { %>
                    <div class="col-lg-6 col-xxl-4 mb-5" >
                        <div class="card  border-0 h-100" style="background-color: antiquewhite;">
                            <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
                                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-4 mt-n4"><i
                                        class="fa-solid fa-hospital-user"></i></div>
                                <h2 class="fs-4 fw-bold">
                                    <%= patient.name %>
                                </h2>
                                <p class="mb-0">Age: <%= patient.age %>
                                </p>
                                <p class="mb-0">Gender: <%= patient.gender %>
                                </p>
                                <p class="mb-0">Phone Number: <%= patient.phoneNumber %>
                                </p>
                                <!-- Display medication details -->
                                <h4 class="mt-4">Medication Details</h4>
                                <% patient.medications.forEach(medication=> { %>
                                    <p class="mb-0">Medication Name: <%= medication.name %>
                                    </p>
                                    <p class="mb-0">Dosage: <%= medication.dosage %>
                                    </p>
                                    <p class="mb-0">Medication Schedule: <%= medication.schedule %>
                                    </p>
                                    <% }) %>
                                        <!-- Display reminder date and time -->
                                        <h4 class="mt-4">Reminder Date and Time</h4>
                                        <p class="mb-0">Reminder Date and Time: <%= patient.reminderDateTime %>
                                        </p>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>


    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Made by Akash Shah</p>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>


</body>
<script src="/Js/script.js">


</script>

</html>